@model IEnumerable<GetDeviceListResponse>
@{
    ViewData["Title"] = "Home Page";
}

<h1>All Devices</h1>
<br />
<br />
<a asp-action="DeviceCategory" class="btn btn-primary">Add New Device</a>
<br />
<br />
@if (Model.Count() > 0)
{
    <div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.SerialNo)</th>

                    <th>Details</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int index = 0;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>

                        <td>@item.SerialNo</td>
                        <td>
                            <a class="btn btn-info" asp-action="Details" asp-controller="Device" asp-route-id="@item.Id">
                                <i class="fas fa-eye"></i>Details
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-success" asp-action="Edit" asp-controller="Device" asp-route-id="@item.Id">
                                <i class="fas fa-edit"></i>Update
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-action="Delete" asp-controller="Device" asp-route-id="@item.Id">
                                <i class="fas fa-trash"></i>Delete
                            </a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning">
        <h3>No Department Found!</h3>
    </div>
}