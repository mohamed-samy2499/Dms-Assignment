@model GetDeviceCategoryResponse
@{
    ViewData["Title"] = "Delete";
}

<h1>Device Category Details</h1>
<br />
<br />
<form class="container" asp-action="Delete">
    <div class="row">
        <div class=" col-md-6 text-center">
            <label class="form-control-label">Name</label>
            <input asp-for="Name" class="form-control text-center" readonly />
        </div>
    </div>
    <div class="row">

        <h3>Devices Names</h3>
        @if (@Model.DevicesNames != null && @Model.DevicesNames.Count() > 0)
        {
            <br />
            <div class="row">

                @foreach (var property in @Model.DevicesNames)
                {
                    <div class=" col-md-6 text-center">
                        <input asp-for="@property.Name" class="form-control text-center" readonly />
                    </div>
                }
            </div>
            <br />

        }
        else
        {
            <br />
            <div class="alert alert-warning">
                <h3>No Devices Found!</h3>
            </div>
            <br />
            <br />
        }
        <h3>Properties</h3>
        @if (@Model.Properties != null && @Model.Properties.Count() > 0)
        {
            <br />
            <div class="row">

                @foreach (var property in @Model.Properties)
                {
                    <div class=" col-md-6 text-center">
                        <input asp-for="@property.PropertyName" class="form-control text-center" readonly />
                    </div>
                }
            </div>
            <br />

        }
        else
        {
            <div class="alert alert-warning">
                <h3>No Properties Found!</h3>
            </div>
        }
    </div>
    <br />
    <br />
    <br />
    <br />

    <div>
        <input type="submit" class="btn btn-danger" value="Delete" />
        <a class="btn btn-light" asp-action="Index" asp-controller="DeviceCategory">Back To Devices Categories</a>
    </div>
</form>