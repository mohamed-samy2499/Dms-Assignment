@model GetPropertyResponse
@{
    ViewData["Title"] = "Delete";
}

<h1>Property Details</h1>
<br />
<br />
<form class="container" asp-action="Delete">
    <div class="row">
        <input hidden asp-for="@Model.Id"/>
        <div class=" col-md-6 text-center">
            <label class="form-control-label">Name</label>
            <input asp-for="Name" class="form-control text-center" readonly />
        </div>

    </div>
    <br />
    <br />
    <br />
    <br />

    <div>
        <input type="submit" class="btn btn-danger" value="Delete" />
        <a class="btn btn-light" asp-action="Index" asp-controller="Property">Back To Properties</a>
    </div>
</form>


